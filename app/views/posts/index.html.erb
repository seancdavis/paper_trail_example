<h1>Hello World</h1>

<p>
  <%= link_to 'New Post', new_post_path %>
</p>

<hr>

<div>
  <% @posts.each do |post| %>
    <div>
      <span><%= post.body %></span>
      <br>
      <span><%= time_ago_in_words(post.created_at) %></span>
      <br>
      <span><%= post.user.name %></span>
    </div>
  <% end %>
</div>


